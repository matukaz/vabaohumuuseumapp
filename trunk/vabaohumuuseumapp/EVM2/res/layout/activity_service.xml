<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backrepeat"
    tools:context=".ServiceActivity" >

    <ScrollView
	    android:id="@+id/scrollview_services"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_alignParentTop="true"
	    android:layout_marginBottom="21dp"
	    android:adjustViewBounds="true" >
    <RelativeLayout
		    android:id="@+id/serviceLayout"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:adjustViewBounds="true"
		    android:paddingBottom="@dimen/activity_vertical_margin"
		    android:paddingLeft="@dimen/activity_horizontal_margin"
		    android:paddingRight="@dimen/activity_horizontal_margin"
		    android:paddingTop="@dimen/activity_vertical_margin"
		    android:visibility="visible"
		    tools:context=".ServiceActivity" >

			
			<TextView
			    android:id="@+id/textView_service_name"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_centerHorizontal="true"
			    android:layout_marginTop="5dp"
			    android:gravity="center_horizontal"
			    android:text="TextView"
			    android:textAppearance="?android:attr/textAppearanceMedium" />
			
			<TextView
			    android:id="@+id/textView_service_description"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_below="@id/textView_service_name"
			    android:layout_centerHorizontal="true"
			    android:text="TextView" />
		
		</RelativeLayout>
	</ScrollView>
    
    <ImageView
	    android:id="@+id/image_stripes"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentEnd="true"
	    android:layout_alignParentStart="false"
	    android:layout_centerVertical="false"
	    android:background="@drawable/backrepeat_stripe"
	    android:baselineAlignBottom="true"
	    android:contentDescription="Triibuline"
	    android:cropToPadding="true"
	    android:scaleType="fitEnd"
	    android:visibility="visible" />


</RelativeLayout>
